<%= form_for @identity, url: identity_path do |form| %>
  <% if @identity.errors.any? %>
    <h2>Form is invalid</h2>
    <ul>
      <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <% for message in @identity.errors.full_messages %>
          <%= message %>
        <% end %>
      </div>
    </ul>
  <% end %>

  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </p>
  <p>
    <%= form.label :cellphone %>
    <%= form.phone_field :cellphone %>
  </p>
  <p>
    <%= form.label :intern %>
    <%= form.number_field :intern %>
  </p>
  <p>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </p>
  
  <p>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </p>
  <p>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </p>
  <p>
    <%= form.label :admin %>
    <%= form.check_box :admin, cheched_value: 'S', unchecked_value: 'N' %>
  </p>
  <p class='button'><%= form.submit t('.create')%></p>
<% end %>
